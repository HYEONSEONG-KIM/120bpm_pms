body{
   padding-top : 0px;
   background-size: 100%; 
   font-family: 'Noto Sans KR', sans-serif; 
   box-sizing: border-box;
   background: #ffffff;
}  


 * {
   margin: 0;
   padding: 0;
   box-sizing: border-box
}

.member_join_step {
   overflow: hidden;
   margin-bottom: 50px;
}

.member_join_step ul li {
   float: left;
   width: 25%;
   list-style: none;
   text-align: center;
}

.member_join_area .member_join_step ul li span.step_level {
   padding-top: 140px;
   font-weight: bold;
   color: #02468a;
   letter-spacing: -0.08em;
}

.member_join_area .member_join_step ul li span {
   display: block;
}

.step_title{
   font-size: 16px;
}

.step_level{
   color: #02468a;
   font-weight: bold;
   font-size: 16px;
}


.titlebar {
   background: white;
   margin-bottom: 80px;
}



#joinForm ul>li {
   list-style: none;
}

#joinForm a{
   text-decoration: none;
}

.clearfix::after {
   content: "";
   display: block;
   clear: both;
}

#joinForm {
   width: 50%;
   margin: 0 auto;
}

#joinForm ul.join_box {
   border: 1px solid #ddd;
   background-color: #fff;
}

.checkBox,.checkBox>ul {
   position: relative;
}

.checkBox>ul>li {
   float: left;
}

.checkBox>ul>li:first-child {
   width: 85%;
   padding: 15px;
   font-weight: 600;
   color: #888;
}

.checkBox>ul>li:nth-child(2) {
   position: absolute;
   top: 50%;
   right: 30px;
   margin-top: -12px;
}

.checkBox textarea {
   width: 96%;
   height: 90px;
   margin: 0 2%;
   background-color: #f7f7f7;
   color: #888;
   border: none;
}

.footBtwrap {
   margin-top: 15px;
}

.footBtwrap>li {
   float: left;
   width: 50%;
   height: 60px;
}

.footBtwrap>li>button {
   display: block;
   width: 100%;
   height: 100%;
   font-size: 20px;
   text-align: center;
   line-height: 60px;
   border: 2px solid lightgrey;
}

.fpmgBt1 {
   background-color: #fff;
   color: orangered;
   font-size: large;
   font-weight: bold;
}

.fpmgBt2 {
   background-color: #3997e8;
   color: #fff;
   font-size: large;
    font-weight: bold;
} 


.line_dot > strong {
	
    line-height: normal;
    font-weight: 400;
    font-size: 40px;
    color: #d4d4d4;
}

.line_dot p.p1 {
    font-weight: bold;
    font-size: 27px;
}

.line_dot p.p1 span {
    color: #2970a3;
}

.line_dot p.p2 {
    color: #777;
}

.confirm_area{
	
	border: 1px solid #ddd;
}

#logo {
	width: 100px;
}

.cr_red2 {
    color: #e11818;
}

.cr_blue2 {
    color: #2970a3;
}

.box_step {
    position: relative;
    margin-top: 30px;
    padding: 40px 40px 40px 50px;
    width : 60%;
    margin : auto;
    border: 1px solid #ddd;   
/*     background: url("../../resources/imgs/img/step1.png"); */
}

.box_step2{  
	position : left;
	text-align : left;
}

.box_step > strong {
    font-size: 24px;
    margin:0px;
    
}



.box_step > ul > li {
    position: relative;
    margin-bottom: 10px;
    padding-left: 16px;
    line-height: 1.6;
    font-weight: bold;
    font-size: 15px;
    word-break: keep-all;
    text-align:left;
    
}

.box_step > ul{
	margin-top: 0px;
    list-style: url("../../resources/imgs/img/check.png");
    
}

.line_dot {
	padding: 0px 0 20px 0;
	border-top: 2px solid white;
	text-align: center;
}

.line_dot>strong {
	line-height: normal;
	font-weight: 400;
	font-size: 40px;
	color: #d4d4d4;
	text-align:left;
}

.line_dot p.p1 {
	font-weight: bold;
	font-size: 27px;
}

.line_dot p.p1 span {
	color: #2970a3;
}

.line_dot p.p2 {
	color: #777;
}

.confirm_area {
	border: 1px solid #ddd;
}

.logotext{
	font-family: 'Geostar Fill', cursive;
}
.inline-hr{
	display: inline-block;
	width : 100px;
	border: 1px solid lightsteelblue;
	margin : 0 10px;
	vertical-align: middle; 
} 
hr{
	border: 1px solid lightsteelblue;
	width : 400px;
}

h1{
	margin: 0; 
	text-align: center;
}


#agree{
	text-align : left;
}