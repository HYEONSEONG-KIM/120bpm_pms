						}else if( col=='workSj'){ 
							tds.push($('<td class="ellipsis goWork" data-work="'+work['workCode']+'">').html(work[col])); 
						}else{ 
							if(col=='workBgnde' || col=='workEndde' || col=='workRgsde' || col=='workUpdtde'){
