@charset "UTF-8";

@import
	url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300&display=swap')
	;

@import
	url('https://fonts.googleapis.com/css2?family=Geostar&family=Geostar+Fill&display=swap')
	;

body {
	font-family: 'Noto Sans KR', sans-serif;
	padding-top: 0px;
	background-size: 100%;
	box-sizing: border-box;
	background: white;
}

.step_level {
	color: #02468a;
	font-weight: bold;
}

.confirm_area {
	display: inline-block;
	/* 	width: 275px; */
	height: 404px;
	padding: 50px 70px 0;
	text-align: center;
}

.confirm_area.confirm_bg01 {
	margin-right: 65px;
	background: no-repeat center 103px #f3f3f1;
}

.confirm_area.confirm_bg02 {
	margin-right: 65px;
	background: no-repeat center 103px #f3f3f1;
}

#confirm-auto {
	margin-left: 370px;
}

button.confirm_btn {
	display: block;
	width: 100%;
	height: 50px;
	background-color: #0080ff;
	color: white;
	font-size: large;
	font-weight: bold;
}

.orange {
	color: orangered;
}

/* reset */
button {
	padding: 0;
	background: none;
	border: 0;
	cursor: pointer;
}

/* 버튼 영역 */
.btnBox {
	text-align: center;
	vertical-align: middle;
}

.popOpenBtnCmmn {
	width: 200px;
	height: 60px;
	background: #000;
	color: #fff;
	font-size: 16px;
	opacity: 0.7;
	transition: all 0.3s;
}

.popOpenBtnCmmn:hover {
	opacity: 1;
}

/* 팝업 영역 */
.popCmmn {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.popBg {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.7);
}

.popInnerBox {
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	position: absolute;
	top: 50%;
	left: 50%;
	width: 400px;
	height: 250px;
	margin: -125px 0 0 -200px;
	text-align: center;
	background: #fff;
	border-radius: 5px;
}

.popHead {
	padding: 15px;
	background: #000;
	color: #fff;
	font-size: 18px;
}

.popBody {
	padding: 10px;
	box-sizing: border-box;
	font-size: 14px;
}

.popCloseBtnCmmn {
	width: 30%;
	margin: 10px;
	padding: 10px;
	font-size: 16px;
	background: #838383;
	color: #fff;
	transition: all 0.3s;
}

.popCloseBtnCmmn:hover {
	background: #666;
}

.member_join_step {
	overflow: hidden;
	margin: 50px;
	width: 100%;
	height: 20%;
}

.member_join_step ul li {
	float: left;
	width: 25%;
	list-style: none;
	text-align: center;
}

.member_join_area .member_join_step ul li span.step_level {
	padding-top: 140px;
	font-weight: bold;
	color: #02468a;
	font-size: 20px;
	letter-spacing: -0.08em;
}

.member_join_area .member_join_step ul li span {
	display: block;
}

.logotext {
	font-family: 'Geostar Fill', cursive;
}

.inline-hr {
	display: inline-block;
	width: 100px;
	border: 1px solid lightsteelblue;
	margin: 0 10px;
	vertical-align: middle;
}

hr {
	border: 1px solid lightsteelblue;
	width: 400px;
}

#logo {
	width: 100px;
}

h1 {
	margin: 0;
}

form {
	background: white;
	padding: 30px 10px;
}

.line_dot {
	padding: 0px; 0px; 20px; 0px;
	border-top: 2px solid white;
	border-bottom: 1px dashed #ccc;
	text-align: center;
}

.line_dot>strong {
	line-height: normal;
	font-weight: 400;
	font-size: 40px;
	color: #d4d4d4;
}

.line_dot p.p1 {
	font-weight: bold;
	font-size: 27px;
}

.line_dot p.p1 span {
	color: #2970a3;
}

.line_dot p.p2 {
	color: #777;
}

.confirm_area {
	border: 1px solid #ddd;
}

